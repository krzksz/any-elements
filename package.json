{
  "name": "any-elements",
  "amdName": "AnyElements",
  "version": "1.0.2",
  "description": "Lightweight component library build to enable custom elements like features for any selectors you like.",
  "main": "dist/anyElements.js",
  "author": "Mateusz Krzeszowiak <mateusz.krzeszowiak@gmail.com",
  "license": "MIT",
  "umd:main": "dist/anyElements.umd.js",
  "module": "dist/anyElements.mjs",
  "source": "src/anyElements.ts",
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle -w",
    "test": "karma start --single-run",
    "test:dev": "karma start --auto-watch"
  },
  "files": [
    "src",
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.4",
    "eslint": "^5.6.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.1",
    "jasmine-core": "^3.3.0",
    "karma": "^4.0.0",
    "karma-babel-preprocessor": "^8.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-edge-launcher": "^0.4.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "^2.0.1",
    "lint-staged": "^8.1.0",
    "microbundle": "^0.10.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.14.3"
  },
  "mangle": {
    "regex": "^_"
  },
  "lint-staged": {
    "*.json": [
      "prettier",
      "git add"
    ],
    "*.js": [
      "prettier",
      "eslint",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "jasmine": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:prettier/recommended"
    ]
  },
  "eslintIgnore": [
    "dist/**/*.js",
    "karma.conf.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
