{
  "name": "smoll",
  "version": "1.0.0",
  "description": "Super simple component library based on MutationObserver.",
  "main": "dist/smoll.js",
  "author": "Krzksz",
  "license": "MIT",
  "private": true,
  "umd:main": "dist/smoll.umd.js",
  "module": "dist/smoll.mjs",
  "source": "src/smoll.js",
  "scripts": {
    "build": "microbundle --sourcemap false --target web",
    "dev": "microbundle watch",
    "test": "jest"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.6.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.1.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "microbundle": "^0.9.0",
    "mutationobserver-shim": "^0.3.2",
    "prettier": "^1.14.3"
  },
  "lint-staged": {
    "*.json": [
      "prettier",
      "git add"
    ],
    "*.js": [
      "prettier",
      "eslint",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:prettier/recommended"
    ]
  },
  "eslintIgnore": [
    "dist/**/*.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
